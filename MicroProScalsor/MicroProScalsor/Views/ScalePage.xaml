<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MicroProScalsor.Views.ScalePage"
             Title="Scale">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="0"
                         VerticalOptions="Center"
                         HorizontalOptions="Center">
                <Image HorizontalOptions="Center"
                   Source="{Binding ShoePiece1Status}"/>
                <Image HorizontalOptions="Center"
                   Source="{Binding ShoePiece2Status}"/>
                <Image HorizontalOptions="Center"
                   Source="{Binding ShoePiece3Status}"/>
                <Image HorizontalOptions="Center"
                   Source="{Binding ShoePiece4Status}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>